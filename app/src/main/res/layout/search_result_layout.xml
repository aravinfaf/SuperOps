<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchResultLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginHorizontal="@dimen/_dimen_15"
    android:paddingTop="@dimen/_dimen_10"
    android:visibility="gone">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_result"
        android:textColor="@color/disable_text_color"
        android:textSize="@dimen/_text_15"
        android:padding="@dimen/_dimen_10"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/countTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/search_text_color"
        android:textSize="@dimen/_text_15"
        android:padding="@dimen/_dimen_10"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>